@model server.Models.User

<partial name="_HeaderMiddlePartial">

<div class="min-vh-100">
    <div class="top-section d-flex flex-wrap fj-font-sans justify-content-around pt-5">
        <div class="fj-bg-light-primary fj-radius-sm fj-bg-shadow-right m-4 my-auto h-fit-content">
            <p class="fj-border-bottom p-2 px-4">
                Welcome back !
            </p>
            <form class="p-4 fw-bold d-flex flex-column" method="post" enctype="multipart/form-data">

                    <div class="form-group">
                        @* <label asp-for="Email" class="control-label"></label> *@
                        <input asp-for="Email" class="form-control px-2" placeholder="Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        @* <label asp-for="Password" class="control-label"></label> *@
                        <input asp-for="Password" class="form-control px-2" placeholder="Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <br/>
                 <button asp-controller="Account" asp-action="login" type="submit" class=" mb-4 rounded fw-bold fj-bg-black fj-white">Sign In</button>
            </form>
          
        </div>
        <div class="pt-4">
            <img class="fj-h-360px" src="~/images/young women with coffee.png" />
        </div>
    </div>

    </div> 
@{
}
